<div class="row">
  <div class="col-sm-6 mb-3">
    <h1 class="mt-2">My Questions</h1>
  </div>
  
  <div class="col-sm-6 text-right mb-2">
    <div class="text-muted text-right">
      <span>Total questions count: <%= QuestionsHelper::count(@questions) %></span>
    </div>
  </div>
</div>

<% if @questions.present? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
            <th>Title</th>
            <th>Quiz</th>
            <th></th>
            <th></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <%= content_tag :tr, id: dom_id(question), class: dom_class(question) do %>
            

                        <td><%= question.title %></td>
                        <td><%= question.quiz.title %></td>
            
            
              <td><%= link_to 'See Answears', question_path(question.id) %></td>
              <td>
                <%= link_to question_path(question), method: :delete, data: {confirm:"Destroy this question?"}, class: "ml-3 card-link" do %>
                    <i class="fas fa-trash"></i><small class="ml-2">Delete</small>
                <% end %>
              </td>
            
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
  <div class="container text-center mt-5">
      <h4>Create a quizz to start asking others ðŸ¤“</h4>
    </div>
<% end %>