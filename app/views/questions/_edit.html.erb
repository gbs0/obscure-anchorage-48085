<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation" class="alert">
      <h4><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h4>

      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Question Title</label>
    <%# <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if question.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', question, method: :delete, class: "btn btn-md btn-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary mr-3' %>

    <% if question.persisted? %>
      <%= link_to "Cancel", quiz_path(question.quiz_id), class: "btn btn-md btn-warning" %>
    <% else %>
      <%= link_to "Cancel", quiz_path(question.quiz_id), class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
