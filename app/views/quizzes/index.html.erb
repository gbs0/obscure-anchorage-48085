<div class="row">
  <div class="col-sm-6">
    <h1>Quizzes</h1>
  </div>

  <div class="col-sm-6 text-right">
    <%= link_to new_quiz_path, class: 'btn btn-primary' do %>
      Add New Quiz
    <% end %>
    <div class="text-muted text-right">
      <span>Total quizzes count: <%= QuestionsHelper::count(@quizzes) %></span>
    </div>
  </div>
</div>

<% if @quizzes.present? %>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
          <th>Title:</th>
          <th>Topic:</th>
          <th>Created:</th>
          <th></th>
          <th></th>
      </tr>
    </thead>

    <tbody>
      <% @quizzes.each do |quiz| %>
        <%= content_tag :tr, id: dom_id(quiz), class: dom_class(quiz) do %>
          

                      <td><%= quiz.title %></td>
                      <td><%= quiz.topic %></td>
                      <td><%= Timezone.date_threshold(quiz.created_at) %> ago</td>
          
          
            <td><%= link_to 'Questions', quiz %></td>
            <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
  <div class="container text-center mt-5">
    <h4>You doesn't have any quizzes yet ðŸ¤“</h4>
  </div>
<% end %>
